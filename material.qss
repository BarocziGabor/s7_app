
QWidget {
    background-color: %%background%%;
    color: %%text_primary%%;
    font-family: "Roboto", "Segoe UI", sans-serif;
    font-size: 14px;
}

.pages-buttons, .style-button {
    background-color: %%surface%%;
    color: %%text_primary%%;
    font-size: 20px;
    border: none;
    border-top-left-radius: 6px;
    border-bottom-left-radius: 6px;
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;

    padding: 6px 12px;
}

.panel {
    background-color: %%hover%%;
    /* color: %%text_primary%%;
    font-size: 20px; */
    border: none;
    border-radius: 0px;
    padding: 6px 12px;
}

QPushButton{
    background-color: %%button_primary%%;
    color: %%text_primary%%;
    font-size: 20px;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
}

.connected-label {
    color: %%text_passive%%;
}

