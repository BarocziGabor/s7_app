QPushButton:hover {
    background-color: %%hover%%;
}

QPushButton:pressed {
    background-color: %%pressed%%;
}

QPushButton:checked {
    background-color: %%hover%%;
}

.style-button:checked {
    background-color: %%surface%%;
}

#stackedWidget > QWidget {
    background-color: %%surface%%;
    /* border: 0px solid %%border%%; */
    border: none;
    border-radius: 0px;
}

QToolTip {
    background-color: %%surface%%;
    color: %%text_primary%%;
    border: 1px solid %%border%%;
    padding: 4px;
    border-radius: 4px;
}

QLabel {
    background-color: transparent;
    color: %%text_primary%%;
}